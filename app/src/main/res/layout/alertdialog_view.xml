<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgmono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/logo"
        />


    <TextView
        app:layout_constraintStart_toEndOf="@+id/imgmono"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1dialog"
        android:text="Are you going to leave me?"
        android:textSize="20sp"
        android:layout_margin="16dp"
        >


    </TextView>

    <TextView
        app:layout_constraintStart_toStartOf="@id/tv1dialog"
        app:layout_constraintTop_toBottomOf="@id/tv1dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que quieres hacer?"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:id="@+id/subtitulo"
        >

    </TextView>

    <ImageView
        android:id="@+id/imgwalk"
        android:layout_width="68dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/panda"
        app:layout_constraintStart_toEndOf="@id/subtitulo"
        app:layout_constraintTop_toTopOf="@id/tv1dialog" />


</androidx.constraintlayout.widget.ConstraintLayout>